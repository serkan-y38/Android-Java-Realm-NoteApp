<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailPageAct">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgraundphoto9">
    </ImageView>

    <LinearLayout
        android:background="@drawable/backgraund_base"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/detailLinearLayout"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <EditText
                android:layout_marginRight="5dp"
                android:id="@+id/detailTopicText"
                android:textColor="#FF0026"
                android:textSize="23dp"
                android:text="Topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </EditText>

            <EditText
                android:layout_marginLeft="5dp"
                android:id="@+id/detailNameText"
                android:textColor="#FF0026"
                android:textSize="23dp"
                android:text="Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </EditText>

            <TextView
                android:id="@+id/detailDateText"
                android:textColor="#CCC9C9"
                android:textAlignment="textEnd"
                android:textSize="11dp"
                android:text="DateText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            </TextView>

        </LinearLayout>

        <EditText
            android:inputType="textMultiLine"
            android:id="@+id/detailDescriptionText"
            android:textColor="#FFCCC9C9"
            android:text="Note description"
            android:textSize="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/detailLinearLayout">
        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <Button
                android:layout_marginRight="5dp"
                android:layout_gravity="bottom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="delete"
                android:id="@+id/detailDeleteButton">
            </Button>

            <Button
                android:layout_marginLeft="5dp"
                android:layout_gravity="bottom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="update"
                android:id="@+id/detailUpdateButton">
            </Button>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>